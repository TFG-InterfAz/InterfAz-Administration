                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });

        // Initialize index charts
        function createMiniChart(id, data, color) {
            const ctx = document.getElementById(id).getContext('2d');
            return new Chart(ctx, {
                type: 'line',
                data: {
                    labels: Array.from({length: data.length}, (_, i) => i + 1),
                    datasets: [{
                        data: data,
                        borderColor: color,
                        backgroundColor: 'transparent',
                        borderWidth: 2,
                        pointRadius: 0,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            enabled: false
                        }
                    },
                    scales: {
                        x: {
                            display: false,
                            grid: {
                                display: false
                            }
                        },
                        y: {
                            display: false,
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        }

        const ibexChart = createMiniChart('ibexChart', mockData.ibexChart, '#2ecc71');
        const nyseChart = createMiniChart('nyseChart', mockData.nyseChart, '#e74c3c');
        const shanghaiChart = createMiniChart('shanghaiChart', mockData.shanghaiChart, '#2ecc71');

        // Time filter functionality
        const timeFilters = document.querySelectorAll('.time-filter');
        timeFilters.forEach(filter => {
            filter.addEventListener('click', function() {
                timeFilters.forEach(f => f.classList.remove('active'));
                this.classList.add('active');
                
                const period = this.dataset.period;
                const data = mockData.mainChart[period];
                
                mainChart.data.labels = Array.from({length: data.length}, (_, i) => i + 1);
                mainChart.data.datasets[0].data = data;
                mainChart.update();
                
                // Update profit/loss values based on period
                const firstValue = data[0];
                const lastValue = data[data.length - 1];
                const profit = lastValue - firstValue;
                
                if (profit >= 0) {
                    document.getElementById('profit-value').textContent = `+$${Math.abs(profit).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
                    document.getElementById('loss-value').textContent = '-$0.00';
                } else {
                    document.getElementById('profit-value').textContent = '+$0.00';
                    document.getElementById('loss-value').textContent = `-$${Math.abs(profit).toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`;
                }
            });
        });

        // Navigation functionality
        const navLinks = document.querySelectorAll('nav a');
        navLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                // In a real app, this would navigate to different sections
                console.log(`Navigating to: ${this.textContent}`);
            });
        });

        // Button functionality
        document.getElementById('btn-login').addEventListener('click', function() {
