            // In a real app, this would trigger a search
        });

        // View all transactions
        document.getElementById('view-all').addEventListener('click', function(e) {
            e.preventDefault();
            console.log('View all transactions clicked');
            // In a real app, this would navigate to the transactions page
        });

        // Mock transactions data
        const transactions = [
            { id: 1, company: 'Apple Inc.', symbol: 'AAPL', type: 'Buy', shares: 10, price: 175.25, date: '2023-05-15' },
            { id: 2, company: 'Microsoft Corp.', symbol: 'MSFT', type: 'Buy', shares: 5, price: 315.40, date: '2023-05-14' },
            { id: 3, company: 'Tesla Inc.', symbol: 'TSLA', type: 'Sell', shares: 3, price: 170.80, date: '2023-05-12' },
            { id: 4, company: 'Amazon.com Inc.', symbol: 'AMZN', type: 'Buy', shares: 2, price: 112.50, date: '2023-05-10' },
            { id: 5, company: 'Alphabet Inc.', symbol: 'GOOGL', type: 'Buy', shares: 4, price: 120.75, date: '2023-05-08' }
        ];

        // Render transactions
        const transactionsList = document.querySelector('.transactions-list');
        transactions.forEach(tx => {
            const txElement = document.createElement('div');
            txElement.className = 'transaction-item';
            txElement.style.padding = '1rem';
            txElement.style.borderBottom = '1px solid #eee';
            txElement.style.display = 'flex';
            txElement.style.justifyContent = 'space-between';
            txElement.style.alignItems = 'center';
            
            const txTypeClass = tx.type === 'Buy' ? 'profit' : 'loss';
            
            txElement.innerHTML = `
                <div>
                    <div style="font-weight: 600;">${tx.company} (${tx.symbol})</div>
                    <div style="font-size: 0.9rem; color: #7f8c8d;">${tx.date}</div>
                </div>
                <div style="text-align: right;">
                    <div class="${txTypeClass}" style="font-weight: 600;">${tx.type} ${tx.shares} shares</div>
                    <div style="font-size: 0.9rem;">@ $${tx.price.toFixed(2)}</div>
                </div>
            `;
            
            transactionsList.appendChild(txElement);
        });
    </script>
</body>
