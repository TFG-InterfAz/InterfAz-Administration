        // Initialize main chart
        const mainCtx = document.getElementById('mainChart').getContext('2d');
        let mainChart = new Chart(mainCtx, {
            type: 'line',
            data: {
                labels: Array.from({length: mockData.mainChart['1m'].length}, (_, i) => i + 1),
                datasets: [{
                    label: 'Portfolio Value',
                    data: mockData.mainChart['1m'],
                    borderColor: '#3498db',
                    backgroundColor: 'rgba(52, 152, 219, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false
